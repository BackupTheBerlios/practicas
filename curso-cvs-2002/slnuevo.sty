\def\t@ema{}
\def\t@emacont{}
\newif\iffirst@tema

\def\twoup@note{}
\def\twoup@title@note{}

\def\twoupnotes{%
  \global\def\twoup@note{\thispagestyle{empty}\textbf{\notetext}}
  \global\def\twoup@title@note{\newpage \ \ \ \thispagestyle{empty}}
}

\def\slsect#1{%
  \global\def\t@ema{{#1}}
  \first@tematrue
  \global\def\rightmark{\t@ema\t@emacont}\global\def\leftmark{\theslsltitle}%
  \slideheading{{#1}}%
}

\def\set@cont{%
  \global\def\t@emacont{\ \contstr}
}
\def\setno@cont{%
  \global\def\t@emacont{}
}

\def\new@trans{%
  {\iffirst@tema\setno@cont \else\set@cont \fi}}


\newcommand{\slsubsect}{\slidesubheading}


\newenvironment{hslide}{%
  \begin{slide}\sffamily\first@temafalse}{\new@trans\end{slide}\twoup@note}


\newenvironment{vslide}{%
\begin{slide*}\sffamily\first@temafalse}{\new@trans\end{slide*}\twoup@note}


